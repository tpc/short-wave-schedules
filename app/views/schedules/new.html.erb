<h1>New schedule</h1>

<% form_for(@schedule) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :year_season %><br />
    <%= f.text_field :year_season %>
  </p>
  <p>
    <%= f.label :language %><br />
    <%= f.text_field :language %>
  </p>
  <p>
    <%= f.label :posting_date %><br />
    <%= f.date_select :posting_date %>
  </p>
  <p><b>Regional Tables</b><br />
    <%= f.collection_select(:rt_ids, Rt.find(:all, :order => "created_at"), :id, :name, {}, {:name => 'schedule[rt_ids][]', :multiple => true}) %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', schedules_path %>
